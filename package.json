{
  "name": "ethereum-sandbox",
  "version": "0.9.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "prettier": "prettier --single-quote --write 'src/**/*.{ts,json,js}'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf ./build",
    "build": "yarn clean && yarn contracts:compile && tsc && mkdir -p build/truffle && cp -r src/truffle/build build/truffle/build",
    "start": "ts-node src/index.ts",
    "contracts:compile": "cd src/truffle && truffle compile",
    "contracts:deploy": "yarn contracts:compile && ts-node src/bin/deploy.ts",
    "parity:up": "docker-compose up -d parity",
    "pantheon:up": "docker-compose up -d pantheon",
    "down": "docker-compose down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dan-turner/ethereum-sandbox.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dan-turner/ethereum-sandbox/issues"
  },
  "homepage": "https://github.com/dan-turner/ethereum-sandbox#readme",
  "devDependencies": {
    "@types/node": "8.10.11",
    "husky": "0.14.3",
    "lint-staged": "7.1.3",
    "nodemon": "1.17.5",
    "prettier": "1.13.4",
    "tslint": "5.10.0",
    "tslint-config-prettier": "1.13.0",
    "typescript": "2.9.1"
  },
  "lint-staged": {
    "src/**/*.{ts,json,js}": [
      "yarn run prettier",
      "git add"
    ]
  },
  "dependencies": {
    "ethers": "3.0.15",
    "truffle": "4.1.11",
    "ts-node": "6.1.0"
  }
}
